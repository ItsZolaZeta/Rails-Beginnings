<main>
  <div class="container my-5">
    <h1>Sign up / Log in</h1>
    <br>
    <%= form_for(@user) do |form| %>
      <div class="form-group">
        <%= form.label(:email) %>
        <%= form.text_field(:email, class: 'form-control', placeholder: 'me@epfl.ch') %>
      </div>
      <div class="prompt">
        <%= form.submit('Log in', class: 'btn btn-primary') %>
      </div>
    <% end %>
  </div>
</main>
